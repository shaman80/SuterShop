<Window x:Class="SuterShop.RegisterPanel.View.RegisterPanelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuterShop.RegisterPanel.View"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="RegisterPanelView">
    <Grid>
        <Border Margin="5" Name="loginPanel" Visibility="Visible" BorderBrush="DarkGray" BorderThickness="1" Width="250">
            <StackPanel Background="AntiqueWhite" Orientation="Vertical" >
                <TextBlock  Text="Логин" Margin="5,5,5,0"/>
                <TextBox Name="userLogin" Margin="5"/>
                <TextBlock  Text="Имя" Margin="5,5,5,0"/>
                <TextBox Name="FullName" Margin="5"/>
                <TextBlock Text="Email" Margin="5,5,5,0"/>
                <TextBox Name="userEmail" Margin="5,5,5,15"/>
                <TextBlock Text="Пароль" Margin="5,5,5,0"/>
                <TextBox Name="userPassword" Margin="5,5,5,15"/>
                <Button Click="Register" Content="Зарегистрироваться" Margin="5"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
