<Window x:Class="SuterShop.Review.ReviewView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:review="clr-namespace:SuterShop.Review"
        mc:Ignorable="d"
        Title="ReviewView" Height="450" Width="800">
    <Window.DataContext>
        <review:ReviewViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Product Reviews" FontWeight="Bold" FontSize="16" Margin="10"/>

        <DataGrid ItemsSource="{Binding Messages, UpdateSourceTrigger=PropertyChanged}"  x:Name="dataGridReviews" Grid.Row="1" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Goods ID" Binding="{Binding GoodsItem}" />
                <DataGridTextColumn Header="Feedback Text" Binding="{Binding MessageText}" />
                <DataGridTextColumn Header="Date Added" Binding="{Binding DateAdded}" />
                <DataGridTextColumn Header="Sender Id" Binding="{Binding Sender}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
